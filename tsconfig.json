{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "module": "commonjs",
    "strict": true,
    "target": "es2018",
    "baseUrl": ".",
    "outDir": "lib",
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["./src"],
  "exclude": ["**/node_modules/**"]
}
